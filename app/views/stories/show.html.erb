<div class="row-fluid">
  <div class="span2">
    <%= render 'shared/sidebar' %>
  </div>
  <div class="span10">
    <div class="row-fluid">
      <div class="span12">
        <h2><%= @story.name %></h2>
        <p><%= @story.description %></p>
        <p><%= "#{@story.storypoints} storypoints" %></p>
        <p><%= "#{@story.hours_left} hours left (task-based)" %></p>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h2>Tasks</h2>
        <p><%= link_to 'Add Task', new_story_task_path(@story), class: 'btn' %></p>
        <table class="table table-striped table-bordered">
          <% @story.tasks.each do |task| %>
            <tr>
              <td><%= link_to task.name, task %></td>
              <td><%= "#{task.hours_left}h left" %></td>
              <td>
                <%= link_to 'Edit', '#' %> |
                <%= link_to 'Delete', '#' %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
