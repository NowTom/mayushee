<div class="row-fluid">
  <div class="span2">
    <%= render 'shared/sidebar' %>
  </div>
  <div class="span10">
    <div class="row-fluid">
      <div class="span12">
        <h2><%= "#{@story.name}(#{@story.storypoints})" %></h2>
        <p><%= @story.description %></p>
        <p><%= link_to 'Add Task', new_story_task_path(@story), class: 'btn pull-right' %></p>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h2>Listing tasks</h2>
        <table class="table table-striped table-bordered">
          <% @story.tasks.each do |task| %>
            <tr>
              <td><%= task.original_estimation %></td>
              <td><%= task.name %></td>
              <td><%= task.description %></td>
              <td><%= "#{task.hours_left}h" %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
